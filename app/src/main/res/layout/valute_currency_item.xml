<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/valute_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:src="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/base_valute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/valute_logo"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@id/valute_logo"
                android:text="USD" />

            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/valute_logo"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@id/base_valute"
                android:text="TO" />

            <TextView
                android:id="@+id/second_valute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/valute_logo"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@id/to"
                android:text="UAH" />

            <TextView
                android:id="@+id/buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/valute_logo"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_toEndOf="@id/valute_logo"
                android:text="27.785" />

            <TextView
                android:id="@+id/sell_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/valute_logo"
                android:layout_alignStart="@+id/second_valute"
                android:layout_toEndOf="@id/buy_price"
                android:text="27.785" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

